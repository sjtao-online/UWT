@{
    var rPath =
#if DEBUG
"/_content/UWT.Libs.BBS"
#else
""
#endif
;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link-less href="@rPath/bbs/forum.less" is-server-mode="false"/>
    @foreach (string item in ViewBag.ThemeCssList)
    {
        <link href="@item" rel="stylesheet" />
    }
    @RenderSection("CSS", false)
    <title>@(string.Format(BBSEx.BbsConfigModel.TitleFormat, ViewBag.Title??""))</title>
    
</head>
<body>
    <div>
        <header>
            <div class="full_screen">
                <div class="header cc">
                    <div class="logo">
                        <a href="/BBS">
                            @if (string.IsNullOrEmpty(BBSEx.BbsConfigModel.Logo))
                            {
                                <span>@BBSEx.BbsConfigModel.ForumName</span>
                            }
                            else
                            {
                                <img src="@BBSEx.BbsConfigModel.Logo" alt="logo" />
                            }
                        </a>
                    </div>
                    <div class="nav">
                        <a href="#" class="current">123</a>
                    </div>
                    <div class="header_search">
                        <input type="text" id="search_text" class="search_text empty" value=""/>
                    </div>
                </div>
            </div>
        </header>

        @RenderBody()


        <footer>
            <div class="full_screen">
                <div class="line"></div>
                <div class="center">
                    <div>
                        <div class="info">
                            <a href="/bbs">@BBSEx.BbsConfigModel.ForumName</a>
                            <span class="beian"><a href="//beian.miit.gov.cn/">@BBSEx.BbsConfigModel.BeianCode</a></span>
                        </div>
                        <div class="desc">
                            Powered by UWT.Libs.BBS
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="/admins/js/common.js"></script>
    <script src="//libs.baidu.com/jquery/2.0.0/jquery.min.js"></script>
    <script src="@rPath/bbs/forum.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>



