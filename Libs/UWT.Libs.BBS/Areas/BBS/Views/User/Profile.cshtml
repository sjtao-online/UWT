@{
    var profile = (UWT.Libs.BBS.Areas.Forums.Models.Users.UserSimpleInfo)ViewBag.Profile;
}
<div class="full_screen user-border">
    @Html.Partial("_PartialUserHeader", profile)
    <div class="users">
        <div class="content">
            <div class="box profile">
                <div class="box-title">
                    <div class="title-text"></div>
                </div>
                <div class="box-content">
                    @foreach (UWT.Libs.BBS.Areas.Forums.Models.Users.UserPropertiesModel item in ViewBag.UserProperties)
                    {
                        <div class="group-title">@item.GroupName</div>
                        <div class="properties">
                            @foreach (var prop in item.Children)
                            {
                                <div class="property">
                                    <div class="prop-title">@(item.TitleMap[prop.Id])</div>
                                    <div class="prop-value">@prop.Title</div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="infos">
            @Html.Partial("_PartialUserProfile", profile)
        </div>
    </div>
</div>